# RamaLama Logrotate Configuration
# Using absolute paths for better compatibility

/var/log/ramalama/ramalama.log {
    daily
    rotate 30
    compress
    missingok
    notifempty
    sharedscripts
    postrotate
        echo "$(date): Log rotation completed" >> /var/log/ramalama/ramalama.log
    endscript
}

/var/log/ramalama/sessions/*.log {
    daily
    rotate 30
    compress
    missingok
    notifempty
    sharedscripts
    postrotate
        echo "$(date): Session logs rotation completed" >> /var/log/ramalama/ramalama.log
    endscript
}

/var/log/ramalama/monitor.log {
    daily
    rotate 30
    compress
    missingok
    notifempty
    sharedscripts
    postrotate
        echo "$(date): Monitor log rotation completed" >> /var/log/ramalama/monitor.log
    endscript
}