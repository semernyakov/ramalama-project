# RamaLama Logrotate Configuration

# Global settings
daily
rotate 30
compress
missingok
notifempty

./logs/ramalama.log {
    sharedscripts
    postrotate
        echo "$(date): Log rotation completed" >> ./logs/ramalama.log
    endscript
}

./logs/sessions/*.log {
    sharedscripts
    postrotate
        echo "$(date): Session logs rotation completed" >> ./logs/ramalama.log
    endscript
}

./logs/monitor.log {
    sharedscripts
    postrotate
        echo "$(date): Monitor log rotation completed" >> ./logs/monitor.log
    endscript
}
